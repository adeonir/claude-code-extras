{
  "mcpServers": {
    "console-ninja": {
      "command": "npx",
      "args": ["-y", "-c", "node ~/.console-ninja/mcp"]
    },
    "chrome-devtools": {
      "command": "npx",
      "args": ["-y", "@anthropic/chrome-devtools-mcp"]
    },
    "serena": {
      "command": "uvx",
      "args": ["--from", "git+https://github.com/oraios/serena", "serena", "start-mcp-server", "--enable-web-dashboard", "false"]
    }
  }
}
